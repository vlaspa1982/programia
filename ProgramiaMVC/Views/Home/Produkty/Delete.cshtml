@model ProgramiaMVC.Models.Produkt

<h2>Smazat produkt</h2>

<h3>Jste si jisti, že chcete smazat tento produkt?</h3>

<div>
    <h4>Parametry produktu</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Název
        </dt>
        <dd class="col-sm-10">
            @Model.NazevProduktu
        </dd>

        <dt class="col-sm-2">
            Popis
        </dt>
        <dd class="col-sm-10">
            @Model.PopisProduktu
        </dd>

        <dt class="col-sm-2">
            Cena
        </dt>
        <dd class="col-sm-10">
            @Model.Cena
        </dd>

        <dt class="col-sm-2">
            Skladová zásoba
        </dt>
        <dd class="col-sm-10">
            @Model.SkladovaZasoba
        </dd>
    </dl>

    <!-- Formulář pro potvrzení nebo zrušení smazání -->
    <form asp-action="DeleteProdukt" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Smazat</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
